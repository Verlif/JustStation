<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="idea.verlif.juststation.core.test.mapper.RoleMapper">

    <select id="getUserRoleSet" resultType="java.lang.String">
        SELECT r.role_name FROM role r
        WHERE r.role_id IN (SELECT role_id FROM user_role WHERE user_id = #{userId})
    </select>

</mapper>